{
  "name": "appfood",
  "version": "1.0.0",
  "description": "Application web pour trouver des restaurants et des recettes",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=8080",
    "start:server": "node server.js",
    "dev": "concurrently \"npm run start\" \"npm run start:server\"",
    "lint": "eslint src/js/**/*.js",
    "format": "prettier --write \"src/**/*.{js,html,css}\"",
    "build": "mkdir -p dist && cp -r index.html src dist/"
  },
  "keywords": [
    "restaurant",
    "food",
    "recipes",
    "map",
    "leaflet"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "live-server": "^1.2.2",
    "prettier": "^3.5.3"
  },
  "dependencies": {
    "braces": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "micromatch": "^4.0.8",
    "mongodb": "^6.14.2",
    "mongoose": "^8.12.1"
  },
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yannickwastaken/Appfood.git"
  },
  "bugs": {
    "url": "https://github.com/Yannickwastaken/Appfood/issues"
  },
  "homepage": "https://github.com/Yannickwastaken/Appfood#readme"
}
